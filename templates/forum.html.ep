<!doctype html>
% use Data::Dumper;
%= Dumper( $list_messages );
%= Dumper( $list_themes );
<head>
    <title><%= $title %></title>
    <style type="text/css">
html, body {
    height: 100%;
    font-size: 12px;
}

.control {
    float: left;
    padding-right: 10px;
    height: 30px;
}

.msg {
    width: 100%;
    height: 30px;
}

#container {
	position: absolute;
	left: 0;
	top: 0;
    background:#99CC99;
    width: 100%;
    min-height: 95%;
    align-content: top;
}

 
#navigation {
    background: #FF9999;
    width: 100%;
    height: 5%;
}
 
#menu {
    background: #99CC99;
    float: left;
    width: 20%;
    height: 400px;
}
 
#content {
    background: #d2d0d2;
    float: right;
    width: 80%;
    min-height: 95%;
}
 
#clear {
    clear:both;
}
 
#footer {
    background: #0066FF;
    height: 5%;
    width: 100%;
}
    </style>
</head>
<body>

<div id="container">
    <div id="navigation">
        <h2>Блок навигации</h2>
    </div>
         
    <div id="menu">
    	<h2>Темы</h2>
%           foreach my $t( @$list_themes ) {
                <h3><a class="title" href= "<%= $$t{'url'} %>" rel="nofollow" target="_blank">
%                my $theme = $$t{'title'};
%                $theme = "(edited)".$theme unless $$t{'date_edited'} == $$t{'date_created'};
%                $theme = "(hidden)".$theme unless $$t{'status'}      == 1;
%=               $theme;
                </a></h3>
%           }
    </div>

    <div id="content">
        <form method="post" action="http://freee/forum/add">
            <BR>Message:
            <BR><textarea name="msg" rows=5 cols=40/></textarea>
            <BR><input type="submit" value="Enter"/>
        </form>
        <h2>Сообщения</h2>
%       foreach my $t( @$list_messages ) {
            <div class="msg"><h3><a class="title" >
%                my $message = $$t{'msg'};
%                $message = "(edited)".$message unless $$t{'date_edited'} == $$t{'date_created'};
%                $message = "(hidden)".$message unless $$t{'status'}      == 1;
%=               $message;
            </a></h3></div>
            <div class="msg">
                <form method="post" action="http://freee/forum/delete" class="control">
                    <input type="hidden" name="id"  value= "<%= $$t{'id'} %>"/>
                    <input type="submit" value="delete"/>
                </form>
                <form method="post" action="http://freee/forum/edit" class="control">
                    <input type="hidden" name="id"  value= "<%= $$t{'id'} %>"/>
                    <input type="submit" value="edit"/>
                </form>
                <form method="post" action="http://freee/forum/toggle" class="control">
                    <input type="hidden" name="id"  value= "<%= $$t{'id'} %>"/>
                    <input type="submit" value="toggle"/>
                </form>
            </div>
%       }
		</div>
    </div>

    <div id="clear">

    </div>

    <div id="footer">
        <h2>Подвал сайта</h2>
    </div>
</div>

</body>
</html>