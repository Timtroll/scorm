<!doctype html>
% use Data::Dumper;
<head>
    <title><%= $title %></title>
    <style type="text/css">
html, body {
    height: 100%;
    font-size: 12px;
}

.control {
    float: left;
    padding-right: 10px;
    height: 30px;
}

.msg {
    width: 100%;
    height: 30px;
}

.themes {
    margin-left: 60px;
    padding-left: 15px;
}

.groups {
    background: #99CC99;
    float: left;
    width: 20%;
    height: 400px;
}

#container {
    position: absolute;
    left: 0;
    top: 0;
    background:#99CC99;
    width: 100%;
    min-height: 95%;
    align-content: top;
}

 
#navigation {
    background: #FF9999;
    width: 100%;
    height: 5%;
}

#content {
    background: #d2d0d2;
    float: right;
    width: 70%;
    min-height: 95%;
}
 
#clear {
    clear:both;
}
 
#footer {
    background: #0066FF;
    height: 5%;
    width: 100%;
}
    </style>
</head> 

<body>
<div id="container">

    <div class="groups">
        <h2>Группы</h2>
        <div class="title">
            <form method="post" action="http://freee/forum/group">
                <input type="submit" value="add"/>
            </form>
        </div>
%       if ( $list_groups ) {
%           foreach my $g( @$list_groups ) {
                <h3><a href= "<%= "http://freee/forum/list_themes?group_id=".$$g{'id'} %>" >
%               my $group = $$g{'title'};
%               $group = "(edited)".$group unless $$g{'date_edited'} == $$g{'date_created'};
%               $group = "(hidden)".$group unless $$g{'status'}      == 1;
%=              $group;
                </a></h3>
                <div>
                    <form method="post" action="http://freee/forum/del_group" class="control">
                        <input type="hidden" name="id"  value= "<%= $$g{'id'} %>"/>
                        <input type="submit" value="delete"/>
                    </form>
                    <form method="post" action="http://freee/forum/edit_group" class="control">
                        <input type="hidden" name="id"  value= "<%= $$g{'id'} %>"/>
                        <input type="submit" value="edit"/>
                    </form>
                    <form method="post" action="http://freee/forum/toggle" class="control">
                        <input type="hidden" name="theme_id"  value= 0/>
                        <input type="hidden" name="value"  value= "<%= $$g{'status'} %>"/>
                        <input type="hidden" name="table"  value= 'forum_groups'/>
                        <input type="hidden" name="id"  value= "<%= $$g{'id'} %>"/>
                        <input type="submit" value="toggle"/>
                    </form>
                </div>
                <br>
                <br>

%           }
%       }
%       else {
            <h2>no groups yet</h2>    
%       }
    </div>

    <div id="clear">

    </div>

    <div id="footer">
        <h2>Подвал сайта</h2>
    </div>
</div>

</body>
</html>