<!doctype html>
<head>
    <title><%= $title %></title>
    <link rel="stylesheet" type="text/css" href="../css/all.css">
    <style type="text/css">
* {
    margin: 0;
    padding: 0;
}
html, body {
    height: 100%;
    font-size: 12px;
}

dd {
    padding-left: 20px;
    cursor: pointer;
    text-decoration: underline;
}

li {
    cursor: pointer;
    text-decoration: underline;
}

.msg {
    width: 100%;
    height: 30px;
}
.btn {
    float: right;
}

.link {
    cursor: pointer;
}
.link:hover {
    text-decoration: underline;
}
/*------------*/
.entry_summary {
    margin-bottom: 5px;
    min-height: 30px;
    clear: both;
}
.vote_wrapper {
    float: left;
    padding: 2px;
    margin: 0;
    text-align: center;
}
.vote {
    width: 34px;
    height: 18px;
    border: 0 solid #c3d6b3;
    background-color: #fea;
    padding: 7px;
    margin-bottom: 2px;
    text-align: center;
    -webkit-border-radius: 4px;
    -khtml-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
}
.thin_title {
    font-weight: 400;
    text-decoration: underline;
    line-height: 13pt;
}
.entry {
    text-align: center;
    padding: 0;
    margin-left: 65px;
    min-height: 30px;
}
/*------------*/

#container {
    display: table;
    width: 100%;
    height: 100%;
}

#navigation {
    display: table-row;
    height: 5%;
}
 
#menu {
    display: table-cell;
    width: 30%;
    height: 100%;
}
 
#content {
    display: table-cell;
    width: 70%;
    height: 100%;
}
 
#clear {
    clear:both;
}
 
#footer {
    display: table-row;
    height: 5%;
}
</style>
<script src="../js/list_messages.js"></script>
<link rel="icon" href="../favicon.ico">
</head>

<body>

<div id="container">
    <div id="navigation">
        <h2>Блок навигации</h2>
    </div>

    <div id="menu">
        <h2>Группы</h2>
        <div id="groups"></div>
    </div>

    <div id="content">
        <h2 id="add" class="link">Добавить сообщение</h2>
            <input type="hidden" name="theme_id" id="theme_id" value="">
            <input type="hidden" name="id" id="id">
            <BR>Message:
            <BR><textarea name="msg" id="msg" rows=5 cols=40/></textarea>
            <BR><label><input type="checkbox" name="status" id="status" value="1" checked="checked">Статус <button class="btn" id="btn">Добавить</button></label>
        <div id="messages"></div>

        <h2>Сообщения</h2>
        <div id="list_messages_output"></div>

<!--         <i class="fas fa-trash"></i>
        <i class="fas fa-eye"></i>
        <i class="fas fa-eye-slash"></i>
 -->
    </div>

    <div id="footer">
        <h2>Подвал сайта</h2>
    </div>
</div>

</body>
</html>