<!doctype html>
% use Data::Dumper;
%= Dumper( $list );
<head>
    <title><%= $title %></title>
    <style type="text/css">
body {
    background: #f3f2f3;
    color: #000000;
    font-family: Trebuchet MS, Arial, Times New Roman;
    font-size: 12px;
}
 
#container {
	position: absolute;
	left: 0;
	top: 0;
    background:#99CC99;
    width: 100%;
    height: 100%;
    align-content: top;
}

#message {
    position: absolute;
    left: 310px;
    top: 454px;
    background: #FFA07A;
    float: right;
    width: 700px;
    height: 348px;
}
 
    </style>
</head>
<body>

<div id="container">

    <div id="message">
        <form method="post" action="http://freee/forum/save">
            <BR>Message:
            <BR><input type="text" name='msg' value = "<%= $$list{'msg'} %>" >
            <BR><input type="checkbox" name="status" checked >Status active
            <BR><BR><input type="submit" value="Save"/>
            <input type="hidden" name="id"  value= "<%= $$list{'id'} %>"/>
        </form>
    </div>

</div>

</body>
</html>